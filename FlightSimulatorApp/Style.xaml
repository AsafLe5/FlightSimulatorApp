<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="TransparentTextBox" TargetType="TextBox">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="FontSize" Value="16" />
    </Style>

    <Style x:Key="roundedCornersBorder" TargetType="{x:Type Border}">
        <Setter Property="CornerRadius" Value="20" />
        <Setter Property="BorderThickness" Value="6" />
        <Setter Property="Opacity" Value="0.7" />
        <Setter Property="Background" Value="LightBlue" />
    </Style>

  
    
    <Style x:Key="roundedCornersButton" TargetType="Button">
        <Style.Resources>
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="5" />
            </Style>
        </Style.Resources>
        <Setter Property="BorderThickness" Value="5" />
        <Setter Property="Opacity" Value="0.8" />
        <Setter Property="Background" Value="BlanchedAlmond" />
    </Style>

    <Style x:Key="DecreaseSliderButtonStyle" TargetType="{x:Type RepeatButton}">
        <Setter Property="SnapsToDevicePixels" Value="true"/>
        <Setter Property="OverridesDefaultStyle" Value="true"/>
        <Setter Property="IsTabStop" Value="false"/>
        <Setter Property="Focusable" Value="false"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type RepeatButton}">
                    <Border Height="12" Background="DimGray" CornerRadius="6" Margin="0,0,-12,0" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style x:Key="sliderColor" TargetType="{x:Type Slider}">
        <Setter Property="ScrollViewer.Background" Value="LightCyan" />
    </Style>

    <Style x:Key="sliderColorDarker" TargetType="{x:Type Slider}">
        <Setter Property="ScrollViewer.Background" Value="DarkGray" />
    </Style>
</ResourceDictionary>
