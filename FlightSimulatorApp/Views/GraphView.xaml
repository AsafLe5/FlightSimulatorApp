<UserControl
    x:Class="FlightSimulatorApp.Views.GraphView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FlightSimulatorApp.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:oxy="http://oxyplot.org/wpf"
    d:DesignHeight="400"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <ListBox
            Width="190"
            Height="375"
            Margin="10,10,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            ItemsSource="{Binding VM_AttributesList}"
            SelectionChanged="ListBox_SelectionChanged_1" />

        <oxy:Plot Title="{Binding Title}" Margin="205,10,402,245">
            <oxy:Plot.Series>
                <oxy:LineSeries ItemsSource="{Binding VM_DataPointsList}" />
            </oxy:Plot.Series>
        </oxy:Plot>

    </Grid>
</UserControl>
