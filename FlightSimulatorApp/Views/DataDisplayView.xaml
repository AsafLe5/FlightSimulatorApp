<UserControl x:Class="FlightSimulatorApp.Views.DataDisplayView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlightSimulatorApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="200">
    <Grid>
        <Label
            x:Name="Altimeter"
            Width="72"
            Height="34"
            Margin="11,11,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Altimeter:"
            RenderTransformOrigin="-0.758,0.218" />
        <Label
            x:Name="AirSpeed"
            Width="72"
            Height="34"
            Margin="11,41,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="AirSpeed:"
            RenderTransformOrigin="-0.758,0.218" />
        <Label
            x:Name="Heading"
            Width="72"
            Height="34"
            Margin="14,71,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Heading:"
            RenderTransformOrigin="-0.758,0.218" />
        <Label
            x:Name="Pitch"
            Width="72"
            Height="34"
            Margin="31,101,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Pitch:"
            RenderTransformOrigin="-0.758,0.218" />
        <Label
            x:Name="Roll"
            Width="72"
            Height="34"
            Margin="36,131,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Roll:"
            RenderTransformOrigin="-0.758,0.218" />
        <Label
            x:Name="Yaw"
            Width="72"
            Height="34"
            Margin="36,161,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Yaw:"
            RenderTransformOrigin="-0.758,0.218" />
        <Label
            x:Name="CurrectAltimeterLabel"
            Width="120"
            Height="23"
            Margin="70,15,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="{Binding VM_CurrentAltimeter, Mode=OneWay}" />
        <Label
            x:Name="CurrectAirSpeedLabel"
            Width="120"
            Height="23"
            Margin="70,45,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="{Binding VM_CurrentAirSpeed, Mode=OneWay}" />
        <Label
            x:Name="CurrectHeadingLabel"
            Width="120"
            Height="23"
            Margin="70,75,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="{Binding VM_CurrentHeading, Mode=OneWay}" />
        <Label
            x:Name="CurrectPitchLabel"
            Width="120"
            Height="23"
            Margin="70,105,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="{Binding VM_CurrentPitch, Mode=OneWay}" />
        <Label
            x:Name="CurrectRollLabel"
            Width="120"
            Height="23"
            Margin="70,135,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="{Binding VM_CurrentRoll, Mode=OneWay}" />
        <Label
            x:Name="CurrectYawLabel"
            Width="120"
            Height="23"
            Margin="70,165,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="{Binding VM_CurrentYaw, Mode=OneWay}" />

    </Grid>
</UserControl>
