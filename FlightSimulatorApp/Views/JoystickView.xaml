<UserControl
    x:Class="FlightSimulatorApp.Views.JoystickView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FlightSimulatorApp.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="200"
    d:DesignWidth="200"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="7*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <!--  Aileron Label  -->
        <Grid Grid.Row="0">

            <Label
                Width="200"
                Margin="10,10,-10,-10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                HorizontalContentAlignment="Center"
                Content="&lt;- Aileron -&gt;"
                FontSize="18"
                RenderTransformOrigin="0.5,0.5" />
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="7*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <!--  Throttle Label  -->
            <Grid Grid.Column="0">
                <Label
                    Width="138"
                    Margin="-58,65,-60,49"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Content="&lt;- Throttle -&gt;"
                    FontSize="18"
                    RenderTransformOrigin="0.5,0.5">
                    <Label.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform />
                            <SkewTransform />
                            <RotateTransform Angle="270" />
                            <TranslateTransform />
                        </TransformGroup>
                    </Label.RenderTransform>
                </Label>
            </Grid>

            <!--  Throttle Slider  -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="49*" />
                    <RowDefinition Height="66*" />
                    <RowDefinition Height="25*" />
                </Grid.RowDefinitions>
                <Slider
                    x:Name="throttleSlider"
                    Grid.Row="1"
                    Width="192"
                    Margin="-85,11.333,-87,36.667"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    IsEnabled="False"
                    Maximum="1"
                    Minimum="0"
                    RenderTransformOrigin="0.5,0.5"
                    Style="{StaticResource sliderColorDarker}"
                    Value="{Binding VM_ThrottleCurrentValue, Mode=OneWay}">
                    <Slider.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform />
                            <SkewTransform />
                            <RotateTransform Angle="90" />
                            <TranslateTransform />
                        </TransformGroup>
                    </Slider.RenderTransform>
                </Slider>
            </Grid>

            <!--  Joystick  -->

            <Grid Grid.Column="2">
                <Viewbox Canvas.Left="72" Canvas.Top="10">
                    <Canvas
                        x:Name="Base"
                        Width="120"
                        Height="120"
                        Margin="0">
                        <Ellipse
                            Width="120"
                            Height="120"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top">
                            <Ellipse.Fill>
                                <RadialGradientBrush>
                                    <GradientStop Offset="1" Color="#FF2C2A2A" />
                                    <GradientStop Color="#FF3A3737" />
                                </RadialGradientBrush>
                            </Ellipse.Fill>
                        </Ellipse>
                        <Ellipse
                            Canvas.Left="20"
                            Canvas.Top="20"
                            Width="80"
                            Height="80"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top">
                            <Ellipse.Fill>
                                <RadialGradientBrush>
                                    <GradientStop Offset="1" Color="#FF0E0E0E" />
                                    <GradientStop Color="#FF1D1D1D" />
                                    <GradientStop Offset="0.453" Color="#FF323030" />
                                </RadialGradientBrush>
                            </Ellipse.Fill>
                        </Ellipse>
                        <Path
                            Canvas.Left="47"
                            Canvas.Top="6"
                            Width="25"
                            Height="8"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Data="M205.75,65.625 L226.875,47.25 L248.5,65.625 z"
                            Fill="#FF575757"
                            Stretch="Fill"
                            UseLayoutRounding="False" />
                        <Path
                            Canvas.Left="47"
                            Canvas.Top="105"
                            Width="25"
                            Height="8"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Data="M205.75,65.625 L226.875,47.25 L248.5,65.625 z"
                            Fill="#FF575757"
                            RenderTransformOrigin="0.5,0.5"
                            Stretch="Fill"
                            UseLayoutRounding="False">
                            <Path.RenderTransform>
                                <ScaleTransform ScaleY="-1" />
                            </Path.RenderTransform>
                        </Path>
                        <Path
                            Canvas.Left="95.559"
                            Canvas.Top="56.5"
                            Width="25"
                            Height="8"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Data="M205.75,65.625 L226.875,47.25 L248.5,65.625 z"
                            Fill="#FF575757"
                            RenderTransformOrigin="0.5,0.5"
                            Stretch="Fill"
                            UseLayoutRounding="False">
                            <Path.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform ScaleX="-1" ScaleY="-1" />
                                    <RotateTransform Angle="-90" />
                                </TransformGroup>
                            </Path.RenderTransform>
                        </Path>
                        <Path
                            Canvas.Left="-2"
                            Canvas.Top="56.5"
                            Width="25"
                            Height="8"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Data="M205.75,65.625 L226.875,47.25 L248.5,65.625 z"
                            Fill="#FF575757"
                            RenderTransformOrigin="0.5,0.5"
                            Stretch="Fill"
                            UseLayoutRounding="False">
                            <Path.RenderTransform>
                                <TransformGroup>
                                    <RotateTransform Angle="90" />
                                    <ScaleTransform ScaleX="-1" />
                                </TransformGroup>
                            </Path.RenderTransform>
                        </Path>

                        <Canvas
                            x:Name="JoystickLimit"
                            Canvas.Left="20"
                            Canvas.Top="20"
                            Width="80"
                            Height="80"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            RenderTransformOrigin="0.5,0.5">
                            <!--<Ellipse x:Name="Shadow" HorizontalAlignment="Left" Height="88" VerticalAlignment="Top" Width="86" Fill="#52131212" Canvas.Left="22" Canvas.Top="18" />-->
                            <Ellipse
                                Canvas.Left="{Binding VM_AileronCurrentValue}"
                                Canvas.Top="{Binding VM_ElevatorCurrentValue}"
                                Width="40"
                                Height="40"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                RenderTransformOrigin="0.5,0.5">
                                <Ellipse.Fill>
                                    <RadialGradientBrush>
                                        <GradientStop Offset="1" Color="#9A909090" />
                                        <GradientStop Color="Gray" />
                                    </RadialGradientBrush>
                                </Ellipse.Fill>
                            </Ellipse>

                            <Canvas.RenderTransform>
                                <TranslateTransform x:Name="knobPosition" />
                            </Canvas.RenderTransform>
                            <Canvas.Resources />
                        </Canvas>

                    </Canvas>
                </Viewbox>

            </Grid>

            <!--  Elevator Label  -->
            <Grid Grid.Column="3">
                <Label
                    Width="138"
                    Margin="-65,64,-53,50"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Content="&lt;- Elevator -&gt;"
                    FontSize="18"
                    RenderTransformOrigin="0.5,0.5">
                    <Label.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform />
                            <SkewTransform />
                            <RotateTransform Angle="270" />
                            <TranslateTransform />
                        </TransformGroup>
                    </Label.RenderTransform>
                </Label>
            </Grid>

        </Grid>

        <!--  Rudder Slider  -->
        <Grid Grid.Row="2">
            <Slider
                x:Name="rudderSlider"
                Width="195"
                Margin="60,2,-55,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                IsEnabled="False"
                Maximum="1"
                Minimum="-1"
                Style="{StaticResource sliderColorDarker}"
                Value="{Binding VM_RudderCurrentValue, Mode=OneWay}" />
            <!--
                The minimum is -1 and the maximum is 1 adjust for better looking
                The current value changed on the model to current + 1 to fit
            -->
        </Grid>

        <!--  Rudder Label  -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="11*" />
                <ColumnDefinition Width="24*" />
                <ColumnDefinition Width="5*" />
            </Grid.ColumnDefinitions>
            <Label
                Grid.ColumnSpan="3"
                Width="200"
                Height="37"
                Margin="10,-27,-10,10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                HorizontalContentAlignment="Center"
                Content="&lt;- Rudder -&gt;"
                FontSize="18"
                RenderTransformOrigin="0.5,0.5" />
        </Grid>
    </Grid>
</UserControl>
