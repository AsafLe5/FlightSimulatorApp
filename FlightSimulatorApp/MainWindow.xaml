<Window
    x:Class="FlightSimulatorApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:System="clr-namespace:System;assembly=mscorlib"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FlightSimulatorApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="187*" />
            <ColumnDefinition Width="609*" />
        </Grid.ColumnDefinitions>

        <Button
            Grid.Column="1"
            Width="42"
            Height="42"
            Margin="-80,306,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="Button_Click"
            BorderThickness="0,0,0,0"
            Background="#00FF">
            <Image Source="start_button.png"/>
        </Button>
        <Button
            Width="42"
            Height="42"
            Margin="35,306,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="Open_Click"
            BorderThickness="0,0,0,0"
            Background="#00FF">
            <Image Source="open_button.png"/>
            <!--             Content="Open" RenderTransformOrigin="0.5,0.5" >
         <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="-1.314"/>
                    <RotateTransform/>
                    <TranslateTransform Y="-0.86"/>
                </TransformGroup>
            </Button.RenderTransform>-->
            
        </Button>
        <Slider
            x:Name="Timeline"
            Grid.ColumnSpan="2"
            Width="641"
            Margin="11,363,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Maximum="{Binding VM_CSVLinesNumber, Mode=OneWay}"
            Minimum="0"
            Value="{Binding VM_CurrentLineIndex, Mode=TwoWay}" />
        <Label
            x:Name="TimelineLabel"
            Grid.Column="1"
            Width="61"
            Height="42"
            Margin="537,306,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="{Binding VM_CurrentLineIndex, Mode=OneWay}" />
        <Slider
            x:Name="rudderSlider"
            Grid.ColumnSpan="2"
            Width="182"
            Margin="62,233,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Maximum="{Binding VM_RudderMaximunValue, Mode=OneWay}"
            Minimum="{Binding VM_RudderMinimumValue, Mode=OneWay}"
            Value="{Binding VM_RudderCurrentValue, Mode=OneWay}" />
        <Slider
            x:Name="throttleSlider"
            Width="182"
            Margin="-52,145,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Maximum="{Binding VM_ThrottleMaximunValue, Mode=OneWay}"
            Minimum="{Binding VM_ThrottleMinimumValue, Mode=OneWay}"
            RenderTransformOrigin="0.5,0.5"
            Value="{Binding VM_ThrottleCurrentValue, Mode=OneWay}">
            <Slider.RenderTransform>
                <TransformGroup>
                    <ScaleTransform />
                    <SkewTransform />
                    <RotateTransform Angle="90" />
                    <TranslateTransform />
                </TransformGroup>
            </Slider.RenderTransform>
        </Slider>
        <Ellipse
            Grid.ColumnSpan="2"
            Width="137"
            Height="137"
            Margin="77,78,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Fill="#FF67655C"
            Stroke="Black" />
        <Ellipse
            Width="67"
            Height="67"
            Margin="113,113,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Fill="Black"
            Stroke="Black" />
        <Ellipse
            Width="34"
            Height="34"
            Margin="130,129,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Fill="#FFD5D5D5"
            RenderTransformOrigin="0.5,0.5"
            Stroke="Black">
            <Ellipse.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="-1" />
                    <SkewTransform />
                    <RotateTransform />
                    <TranslateTransform />
                </TransformGroup>
            </Ellipse.RenderTransform>
        </Ellipse>
        <Button Grid.ColumnSpan="2">
            <Image Source="skip_to_start_64px.png" />
            <Button.Background>Transparent</Button.Background>
            <Button.BorderThickness>0</Button.BorderThickness>
            <Button.Width>
                <System:Double>42</System:Double>
            </Button.Width>
            <Button.Height>
                <System:Double>42</System:Double>
            </Button.Height>
            <Button.Margin>
                <Thickness>174,306,0,0</Thickness>
            </Button.Margin>
            <Button.HorizontalAlignment>
                <HorizontalAlignment>Left</HorizontalAlignment>
            </Button.HorizontalAlignment>
            <Button.VerticalAlignment>
                <VerticalAlignment>Top</VerticalAlignment>
            </Button.VerticalAlignment>
        </Button>
        <Button Grid.Column="1">
            <Image Source="fast_forward_left.png" />
            <Button.Background>Transparent</Button.Background>
            <Button.BorderThickness>0</Button.BorderThickness>
            <Button.Width>
                <System:Double>42</System:Double>
            </Button.Width>
            <Button.Height>
                <System:Double>42</System:Double>
            </Button.Height>
            <Button.Margin>
                <Thickness>34,306,0,0</Thickness>
            </Button.Margin>
            <Button.HorizontalAlignment>
                <HorizontalAlignment>Left</HorizontalAlignment>
            </Button.HorizontalAlignment>
            <Button.VerticalAlignment>
                <VerticalAlignment>Top</VerticalAlignment>
            </Button.VerticalAlignment>
        </Button>
        <Button Grid.Column="1">
            <Image Source="play_64px.png" />
            <Button.Background>Transparent</Button.Background>
            <Button.BorderThickness>0</Button.BorderThickness>
            <Button.Width>
                <System:Double>42</System:Double>
            </Button.Width>
            <Button.Height>
                <System:Double>42</System:Double>
            </Button.Height>
            <Button.Margin>
                <Thickness>81,306,0,0</Thickness>
            </Button.Margin>
            <Button.HorizontalAlignment>
                <HorizontalAlignment>Left</HorizontalAlignment>
            </Button.HorizontalAlignment>
            <Button.VerticalAlignment>
                <VerticalAlignment>Top</VerticalAlignment>
            </Button.VerticalAlignment>
        </Button>
        <Button Grid.Column="1">
            <Image Source="pause_64px.png" />
            <Button.Background>Transparent</Button.Background>
            <Button.BorderThickness>0</Button.BorderThickness>
            <Button.Width>
                <System:Double>42</System:Double>
            </Button.Width>
            <Button.Height>
                <System:Double>42</System:Double>
            </Button.Height>
            <Button.Margin>
                <Thickness>128,306,0,0</Thickness>
            </Button.Margin>
            <Button.HorizontalAlignment>
                <HorizontalAlignment>Left</HorizontalAlignment>
            </Button.HorizontalAlignment>
            <Button.VerticalAlignment>
                <VerticalAlignment>Top</VerticalAlignment>
            </Button.VerticalAlignment>
        </Button>
        <Button Grid.Column="1">
            <Image Source="stop_64px.png" />
            <Button.Background>Transparent</Button.Background>
            <Button.BorderThickness>0</Button.BorderThickness>
            <Button.Width>
                <System:Double>42</System:Double>
            </Button.Width>
            <Button.Height>
                <System:Double>42</System:Double>
            </Button.Height>
            <Button.Margin>
                <Thickness>175,306,0,0</Thickness>
            </Button.Margin>
            <Button.HorizontalAlignment>
                <HorizontalAlignment>Left</HorizontalAlignment>
            </Button.HorizontalAlignment>
            <Button.VerticalAlignment>
                <VerticalAlignment>Top</VerticalAlignment>
            </Button.VerticalAlignment>
        </Button>
        <Button Grid.Column="1">
            <Image Source="fast_forward_right.png" />
            <Button.Background>Transparent</Button.Background>
            <Button.BorderThickness>0</Button.BorderThickness>
            <Button.Width>
                <System:Double>42</System:Double>
            </Button.Width>
            <Button.Height>
                <System:Double>42</System:Double>
            </Button.Height>
            <Button.Margin>
                <Thickness>222,306,0,0</Thickness>
            </Button.Margin>
            <Button.HorizontalAlignment>
                <HorizontalAlignment>Left</HorizontalAlignment>
            </Button.HorizontalAlignment>
            <Button.VerticalAlignment>
                <VerticalAlignment>Top</VerticalAlignment>
            </Button.VerticalAlignment>
        </Button>
        <Button Grid.Column="1">
            <Image Source="end_64px.png" />
            <Button.Background>Transparent</Button.Background>
            <Button.BorderThickness>0</Button.BorderThickness>
            <Button.Width>
                <System:Double>42</System:Double>
            </Button.Width>
            <Button.Height>
                <System:Double>42</System:Double>
            </Button.Height>
            <Button.Margin>
                <Thickness>269,306,0,0</Thickness>
            </Button.Margin>
            <Button.HorizontalAlignment>
                <HorizontalAlignment>Left</HorizontalAlignment>
            </Button.HorizontalAlignment>
            <Button.VerticalAlignment>
                <VerticalAlignment>Top</VerticalAlignment>
            </Button.VerticalAlignment>
        </Button>
        <Label
            x:Name="playSpeedLabel"
            Grid.Column="1"
            Width="72"
            Height="34"
            Margin="326,314,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Play speed"
            RenderTransformOrigin="-0.758,0.218" />
        <Slider
            x:Name="playSpeedSlider"
            Grid.Column="1"
            Width="108"
            Margin="403,322,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Maximum="30"
            Minimum="0"
            Value="{Binding VM_PlaybackSpeed, Mode=TwoWay}" />
    </Grid>
</Window>
