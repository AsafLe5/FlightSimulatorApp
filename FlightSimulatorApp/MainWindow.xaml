<Window
    x:Class="FlightSimulatorApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:System="clr-namespace:System;assembly=mscorlib"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FlightSimulatorApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid RenderTransformOrigin="0.467,0.449">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="187*" />
            <ColumnDefinition Width="609*" />
        </Grid.ColumnDefinitions>

        <Button
            Grid.Column="1"
            Width="42"
            Height="42"
            Margin="-80,306,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#00FF"
            BorderThickness="0,0,0,0"
            Click="Button_Click">
            <Image Source="rocket_button.png" />
        </Button>
        <Button
            Width="42"
            Height="42"
            Margin="67,306,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#00FF"
            BorderThickness="0,0,0,0"
            Click="Open_Click">
            <Image Source="empty_box_button.png" />
            <!--             Content="Open" RenderTransformOrigin="0.5,0.5" >
         <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="-1.314"/>
                    <RotateTransform/>
                    <TranslateTransform Y="-0.86"/>
                </TransformGroup>
            </Button.RenderTransform>-->

        </Button>
        <Slider
            x:Name="Timeline"
            Grid.ColumnSpan="2"
            Width="641"
            Margin="11,363,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Maximum="{Binding VM_CSVLinesNumber, Mode=OneWay}"
            Minimum="0"
            Value="{Binding VM_CurrentLineIndex, Mode=TwoWay}" />
        <Label
            x:Name="TimelineLabel"
            Grid.Column="1"
            Width="61"
            Height="42"
            Margin="537,306,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="{Binding VM_CurrentLineIndex, Mode=OneWay}" />
        <Slider
            x:Name="rudderSlider"
            Grid.ColumnSpan="2"
            Width="182"
            Margin="62,233,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Maximum="{Binding VM_RudderMaximunValue, Mode=OneWay}"
            Minimum="{Binding VM_RudderMinimumValue, Mode=OneWay}"
            Value="{Binding VM_RudderCurrentValue, Mode=OneWay}" />
        <Slider
            x:Name="throttleSlider"
            Width="182"
            Margin="-52,145,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Maximum="{Binding VM_ThrottleMaximunValue, Mode=OneWay}"
            Minimum="{Binding VM_ThrottleMinimumValue, Mode=OneWay}"
            RenderTransformOrigin="0.5,0.5"
            Value="{Binding VM_ThrottleCurrentValue, Mode=OneWay}">
            <Slider.RenderTransform>
                <TransformGroup>
                    <ScaleTransform />
                    <SkewTransform />
                    <RotateTransform Angle="90" />
                    <TranslateTransform />
                </TransformGroup>
            </Slider.RenderTransform>
        </Slider>
        <Ellipse
            Grid.ColumnSpan="2"
            Width="137"
            Height="137"
            Margin="77,78,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Fill="#FF67655C"
            Stroke="Black" />
        <Ellipse
            Width="67"
            Height="67"
            Margin="113,113,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Fill="Black"
            Stroke="Black" />
        <Ellipse
            Width="34"
            Height="34"
            Margin="130,129,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Fill="#FFD5D5D5"
            RenderTransformOrigin="0.5,0.5"
            Stroke="Black">
            <Ellipse.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="-1" />
                    <SkewTransform />
                    <RotateTransform />
                    <TranslateTransform />
                </TransformGroup>
            </Ellipse.RenderTransform>
        </Ellipse>
        <Button
            Grid.ColumnSpan="2"
            Width="42"
            Height="42"
            Margin="173,306,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#00FF"
            BorderThickness="0,0,0,0"
            Click="Skip_To_Start">
            <Image Source="skip_to_start_64px.png" />
        </Button>
        <Button
            Grid.ColumnSpan="2"
            Width="42"
            Height="42"
            Margin="222,306,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#00FF"
            BorderThickness="0,0,0,0"
            Click="Fast_Forward_Left">
            <Image Source="fast_forward_left.png" />
        </Button>
        <Button
            Grid.ColumnSpan="2"
            Width="42"
            Height="42"
            Margin="271,306,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#00FF"
            BorderThickness="0,0,0,0"
            Click="Play_Button">
            <Image Source="play_64px.png" />
        </Button>
        <Button
            Grid.ColumnSpan="2"
            Width="42"
            Height="42"
            Margin="320,306,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#00FF"
            BorderThickness="0,0,0,0"
            Click="Pause_Button">
            <Image Source="pause_64px.png" />
        </Button>
        <Button
            Grid.ColumnSpan="2"
            Width="42"
            Height="42"
            Margin="369,306,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#00FF"
            BorderThickness="0,0,0,0"
            Click="Stop_Button">
            <Image Source="stop_64px.png" />
        </Button>
        <Button
            Grid.ColumnSpan="2"
            Width="42"
            Height="42"
            Margin="418,306,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#00FF"
            BorderThickness="0,0,0,0"
            Click="Fast_Forward_Right">
            <Image Source="fast_forward_right.png" />
        </Button>
        <Button
            Grid.ColumnSpan="2"
            Width="42"
            Height="42"
            Margin="467,306,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#00FF"
            BorderThickness="0,0,0,0"
            Click="End_Button">
            <Image Source="end_64px.png" />
        </Button>
        <Label
            x:Name="playSpeedLabel"
            Grid.Column="1"
            Width="72"
            Height="34"
            Margin="326,314,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Play speed"
            RenderTransformOrigin="-0.758,0.218" />
        <Slider
            x:Name="playSpeedSlider"
            Grid.Column="1"
            Width="108"
            Margin="403,322,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Maximum="30"
            Minimum="0"
            Value="{Binding VM_PlaybackSpeed, Mode=TwoWay}" />
        
    </Grid>
</Window>
