<Window
    x:Class="FlightSimulatorApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FlightSimulatorApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="187*" />
            <ColumnDefinition Width="609*" />
        </Grid.ColumnDefinitions>
        <Button
            Grid.Column="1"
            Width="140"
            Height="61"
            Margin="261,56,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="Button_Click"
            Content="Button" />
        <Button
            Width="75"
            Margin="55,369,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="Open_Click"
            Content="Open" />
        <Slider
            Grid.Column="1"
            Width="521"
            Margin="0,366,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Minimum="0"
            Maximum="{Binding VM_CSVLinesNumber, Mode=OneWay}"
            Value="{Binding VM_CurrentLineIndex, Mode=TwoWay}"/>
        <Slider HorizontalAlignment="Left" Margin="63,234,0,0" VerticalAlignment="Top" Width="182" Grid.ColumnSpan="2"/>
        <Slider HorizontalAlignment="Left" Margin="-52,145,0,0" VerticalAlignment="Top" Width="182" RenderTransformOrigin="0.5,0.5">
            <Slider.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="90"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Slider.RenderTransform>
        </Slider>
        <Ellipse Fill="#FF67655C" HorizontalAlignment="Left" Height="137" Margin="77,78,0,0" Stroke="Black" VerticalAlignment="Top" Width="137" Grid.ColumnSpan="2"/>
        <Ellipse Fill="Black" HorizontalAlignment="Left" Height="67" Margin="113,113,0,0" Stroke="Black" VerticalAlignment="Top" Width="67"/>
        <Ellipse Fill="#FFD5D5D5" HorizontalAlignment="Left" Height="34" Margin="130,129,0,0" Stroke="Black" VerticalAlignment="Top" Width="34" RenderTransformOrigin="0.5,0.5">
            <Ellipse.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Ellipse.RenderTransform>
        </Ellipse>
    </Grid>
</Window>
