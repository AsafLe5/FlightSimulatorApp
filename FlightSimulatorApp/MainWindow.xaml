<Window
    x:Class="FlightSimulatorApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FlightSimulatorApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="187*" />
            <ColumnDefinition Width="609*" />
        </Grid.ColumnDefinitions>
        <Button
            Grid.Column="1"
            Width="140"
            Height="61"
            Margin="261,56,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="Button_Click"
            Content="Button" />
        <Button
            Width="75"
            Margin="55,369,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="Open_Click"
            Content="Open" />
        <Slider
            Grid.Column="1"
            Width="521"
            Margin="0,366,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Maximum="{Binding VM_CSVLinesNumber, Mode=OneWay}"
            Minimum="0"
            Value="{Binding VM_CurrentLineIndex, Mode=TwoWay}" />
        <Slider
            x:Name="rudderSlider"
            Grid.ColumnSpan="2"
            Width="182"
            Margin="63,234,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Maximum="{Binding VM_RudderMaximunValue, Mode=OneWay}"
            Minimum="{Binding VM_RudderMinimumValue, Mode=OneWay}"
            Value="{Binding VM_RudderCurrentValue, Mode=OneWay}" />
        <Slider
            x:Name="throttleSlider"
            Width="182"
            Margin="-52,145,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Maximum="{Binding VM_ThrottleMaximunValue, Mode=OneWay}"
            Minimum="{Binding VM_ThrottleMinimumValue, Mode=OneWay}"
            Value="{Binding VM_ThrottleCurrentValue, Mode=OneWay}"
            RenderTransformOrigin="0.5,0.5">
            <Slider.RenderTransform>
                <TransformGroup>
                    <ScaleTransform />
                    <SkewTransform />
                    <RotateTransform Angle="90" />
                    <TranslateTransform />
                </TransformGroup>
            </Slider.RenderTransform>
        </Slider>
        <Ellipse
            Grid.ColumnSpan="2"
            Width="137"
            Height="137"
            Margin="77,78,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Fill="#FF67655C"
            Stroke="Black" />
        <Ellipse
            Width="67"
            Height="67"
            Margin="113,113,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Fill="Black"
            Stroke="Black" />
        <Ellipse
            Width="34"
            Height="34"
            Margin="130,129,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Fill="#FFD5D5D5"
            RenderTransformOrigin="0.5,0.5"
            Stroke="Black">
            <Ellipse.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="-1" />
                    <SkewTransform />
                    <RotateTransform />
                    <TranslateTransform />
                </TransformGroup>
            </Ellipse.RenderTransform>
        </Ellipse>
    </Grid>
</Window>
